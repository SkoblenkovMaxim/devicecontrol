<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.skoblenkov.devicecontrol.controller.MainController">
    <Label text="USB + PostgreSQL Data Logger" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <Button text="Read from USB Device" onAction="#handleReadUsb"/>
    <Button text="Save Last Data to PostgreSQL" onAction="#handleSaveToDb"/>
    <Label fx:id="statusLabel" text="Status: Ready"/>
    <TextArea fx:id="dataTextArea" editable="false" prefHeight="100" prefWidth="500"/>
</VBox>